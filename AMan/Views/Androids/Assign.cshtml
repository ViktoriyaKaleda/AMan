@model AMan.ViewModels.AndroidViewModel

@{
    ViewData["Title"] = "Assign";
}

<h2>Assigning</h2>

<form asp-action="Assign">
    <div class="form-horizontal">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2 class="panel-title">@Model.Android.Name</h2>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> 
                        <img alt="User Pic" src="@Url.Content(Model.Android.AvatarPath ?? "~/Avatars/default.png")" class="img-responsive"> 
                    </div>
                    <div class=" col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>Skills:</td>
                                    <td>@Html.DisplayFor(model => model.Android.SkillsTags)</td>
                                </tr>
                                <tr>
                                    <td>Reability:</td>
                                    <td>@Html.DisplayFor(model => model.Android.Reliability)</td>
                                </tr>
                                <tr>
                                    <td>
                                        <h4>Select job for this Android:</h4>
                                        <select asp-for="Android.CurrentJobId" asp-items='@Model.Jobs' class="form-control"></select>
                                        <br/>
                                        <input type="submit" value="Assign Android to job" class="btn btn-primary">
                                    </td>
                                </tr>
                            </tbody>
                        </table>                        
                    </div>
                </div>
            </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
