@model AMan.Models.Android

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Android?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="Id" />
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AvatarPath)
        </dt>
        <dd>
            <img src="@Url.Content(Model.AvatarPath ?? "~/Avatars/default.png")" class="avatar" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Reliability)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Reliability)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        @if (@Model.Status == true)
        {
            <dd style="color: green">Active</dd>}
        else
        {
            <dd style="color: red">Should be reclaimed</dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
